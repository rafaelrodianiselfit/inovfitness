SELECT 
  NULL AS ID_CLIENT,
  A.ID_ATIVIDADE AS ID_ACT,
  A.NOME AS NAME,
  NULL AS TYPE,
  A.DESCRICAO AS DESCRIPTION,
  AC.NOME AS CATEGORY,
  A.ID_FILIAL AS ID_CLUB,
  CASE 
  	WHEN A.FL_INATIVO = 1 THEN 0 
  	WHEN A.FL_INATIVO = 0 THEN 1
  	ELSE NULL
  END AS FLG_ACTIVE,
  NULL AS START_DATE,
  NULL AS END_DATE,
  A.CAPACIDADE_PADRAO AS MAX_CAPACITY,
  A.FL_EXCLUIDO AS FLG_DELETED,
  A.DATA_CRIACAO AS CREATED_AT,
  NULL AS LAST_MODIFIED_AT,
  NULL AS VERSION
FROM ATIVIDADE A
LEFT JOIN ATIVIDADE_CATEGORIA AC ON A.ID_ATIVIDADE_CATEGORIA = AC.ID_ATIVIDADE_CATEGORIA 
